<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetsApp.PetDetailsPage"
             Title="PetDetailsPage">
    <VerticalStackLayout Padding="10">
        <Label Text="{Binding Pet.Name,StringFormat='Name: {0}'}"
               FontSize="Medium"/>
        <Label Text="{Binding Pet.Species,StringFormat='Species: {0}'}" />
        <Label Text="{Binding Pet.BirthDate,StringFormat='Date of Birth: {0}'}" />
    </VerticalStackLayout>
</ContentPage>