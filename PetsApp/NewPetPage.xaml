<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetsApp.NewPetPage"
             Title="NewPetPage">
    <VerticalStackLayout>
        <Label Text="Name"/>
        <Entry Text="{Binding NewPet.Name}"/>
        <Label Text="Species"/>
        <Entry Text="{Binding NewPet.Species}"/>
        <Label Text="Date of Birth"/>
        <DatePicker Date="{Binding NewPet.BirthDate}"/>
        <Button Text="Save" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>